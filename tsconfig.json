{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "esnext",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strict": false,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": [
      "es2021",
      "dom"
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "app/assets/*"
      ],
      "@styles/*": [
        "app/styles/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@types/*": [
        "app/types/*"
      ],
      "@hooks/*": [
        "app/hooks/*"
      ],
      "@api/*": [
        "app/api/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "kubernetes",
    "tmp",
    "libs"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.scss",
    ".next/types/**/*.ts"
  ],
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    },
    {
      "name": "next"
    }
  ]
}
